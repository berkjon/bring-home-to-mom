<div class="new-pf-form-container">

  <h1>New Child Profile</h1>

  <%= form_for @child, url: url_for(controller: 'profiles', action: 'create'), html: {class: 'pure-form'} do |f| %>

    <div class="profile-error-explanation hidden">
      <h3>Errors</h3>
      <ul class="profile-error-messages"></ul>
    </div>

    <div class="new-pf-section basic-info">
      <a href="#"><h2>1. Basic Information</h2></a>

      <div class="new-pf-container container row">
        <div class="col span_6">
          <%= f.label(:first_name, 'First Name:') %><br />
          <%= f.text_field(:first_name) %>
        </div>

        <div class="col span_6">
          <%= f.label(:last_name, 'Last Name:') %><br />
          <%= f.text_field(:last_name) %>
        </div>

        <div class="col span_6">
          <%= f.label(:city, 'City:') %><br />
          <%= f.text_field(:city) %>
        </div>


        <div class="col span_6">
          <%= f.label(:state, 'State:') %><br />
          <%= f.select(:state, %w[AL AK AZ AR CA CO CT DE FL GA HI ID IL IN IA KS KY LA ME MD MA MI MN MS MO MT NE NV NH NJ NM NY NC ND OH OK OR PA RI SC SD TN TX UT VT VA WA WV WI WY], include_blank: true) %>
        </div>

        <div class="col span_6">
          <%= f.label(:phone, 'Phone Number:') %><br />
          <%= f.phone_field(:phone) %><br />
        </div>

        <div class="col span_6">
          <%= f.label(:birthdate, 'Birth Date:') %><br />
          <%= f.date_field(:birthdate) %><br />
        </div>

        <div class="col span_6">
          <%= f.label(:gender, 'Gender:') %><br />
          Male: <%= f.radio_button(:gender, 'male') %><br />
          Female: <%= f.radio_button(:gender, 'female') %><br />
          Other: <%= f.radio_button(:gender, 'other') %>
        </div>

        <div class="col span_6">
          <%= f.label(:sexual_preference, 'Interested in:') %><br />
          Men: <%= f.radio_button(:sexual_preference, 'men') %><br />
          Women: <%= f.radio_button(:sexual_preference, 'women') %><br />
          Both: <%= f.radio_button(:sexual_preference, 'both') %>
        </div>

        <div>
          <%= f.label(:bio, 'Short Bio:') %><br />
          <%= f.text_area(:bio) %>
        </div>

        <div class="container row">
          <a class="continue" href="#">Continue</a>
        </div>

      </div>
    </div>

    <div class="new-pf-section optional-info">
      <a href="#"><h2>2. Optional Information</h2></a>

      <div class="new-pf-container new-values-container container row hidden">
        <%= f.label(:linkedin_url, 'LinkedIn:') %><br />
        <%= f.url_field(:linkedin_url) %><br />

        <%= f.label(:facebook_url, 'Facebook:') %><br />
        <%= f.url_field(:facebook_url) %><br />

        <%= f.label(:religion, 'Religion:') %><br />
        <%= f.text_field(:religion) %><br />

        <%= f.label(:smoke, 'Smokes:') %><br />
        Yes: <%= f.radio_button(:smoke, true) %>
        No: <%= f.radio_button(:smoke, false) %><br />

        <%= f.label(:embarrassing_moment, 'Embarrassing Moment:') %><br />
        <%= f.text_area(:embarrassing_moment) %>

        <div class="container row">
          <a class="continue" href="#">Continue</a>
        </div>

      </div>
    </div>

    <div class="new-pf-section image-info">
      <a href="#"><h2>3. Profile Images</h2></a>

      <div class="new-pf-container hidden">

        <div class="container row ">

          <div class="col span_2">
            <%= f.label(:pf_image_1, 'Image 1:') %>
            <%= f.file_field(:pf_image_1) %><br />
            <img class="upload-preview" src="/images/empty-pf-image.png" />
          </div>

          <div class="col span_2">
            <%= f.label(:pf_image_2, 'Image 2:') %>
            <%= f.file_field(:pf_image_2) %><br />
            <img class="upload-preview" src="/images/empty-pf-image.png" />
          </div>

          <div class="col span_2">
            <%= f.label(:pf_image_3, 'Image 3:') %>
            <%= f.file_field(:pf_image_3) %><br />
            <img class="upload-preview" src="/images/empty-pf-image.png" />
          </div>

          <div class="col span_2">
            <%= f.label(:pf_image_4, 'Image 4:') %>
            <%= f.file_field(:pf_image_4) %><br />
            <img class="upload-preview" src="/images/empty-pf-image.png" />
          </div>

          <div class="col span_2">
            <%= f.label(:pf_image_5, 'Image 5:') %>
            <%= f.file_field(:pf_image_5) %><br />
            <img class="upload-preview" src="/images/empty-pf-image.png" />
          </div>

        </div>

        <div class="container row">
          <%= f.submit 'Continue' %>
          <a class="continue-force hidden" href="#">Continue</a>
        </div>

      </div>
    </div>
  <% end %>

<%= render partial: 'interests_form' %>
<%= render partial: 'values_form' %>
</div>



