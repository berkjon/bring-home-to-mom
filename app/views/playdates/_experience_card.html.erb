<div class="date-experience-card row">
  <div class="experience_image col span_5">
    <img src="<%= experience.image %>" />
  </div>
  <div class="experience-details col span_7">
    <ul>
        <li>You asked to introduce <%= user.my_child(date).first_name %> to <span><%= user.other_child(date).first_name %></span></li>
        <li><span><%= user.other_child(date).parent.first_name %></span> asked to introduce <span><%= user.other_child(date).first_name %></span> to <%= user.my_child(date).first_name %></li>
        <li><span>Venue:</span> <%= date.first_event_location %></li>
        <li><span>Date:</span> <%= date.first_event_datetime_as_str %></li>
        <li><span>Venue:</span> <%= date.last_event_location %></li>
        <li><span>Date:</span> <%= date.last_event_datetime_as_str %></li>
    </ul>
  </div>
  <div class="other-child-photo col span_3">
    <img src="<%= user.other_child(date).default_pf %>" />
  </div>
</div>
